{% extends 'base.html.twig' %}

{% block body %}
    <h1>Kikolo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kikolo.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ kikolo.titulo }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ kikolo.categoria }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ kikolo.descricao }}</td>
            </tr>
            <tr>
                <th>Imagem</th>
                <td>{{ kikolo.imagem }}</td>
            </tr>
            <tr>
                <th>Localizacao</th>
                <td>{{ kikolo.localizacao }}</td>
            </tr>
            <tr>
                <th>Nomeusuario</th>
                <td>{{ kikolo.nomeusuario }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ kikolo.email }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ kikolo.telefone }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if kikolo.data %}{{ kikolo.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('kikolo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('kikolo_edit', { 'id': kikolo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
